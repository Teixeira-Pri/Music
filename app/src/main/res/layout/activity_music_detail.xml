<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".presentation.MusicDetailActivity">

    <TextView
        android:id="@+id/tv_band_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banda: "
        style="@style/Title3"/>

    <EditText
        android:id="@+id/edt_band_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adicione o artista e/ou banda"/>

    <TextView
        android:id="@+id/tv_music_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Música: "
        style="@style/Title3"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/edt_music_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adicione a música"/>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concluir"
        style="@style/ButtonPrimary"
        android:layout_marginTop="16dp"/>



</LinearLayout>